{
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/src/",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "${workspaceFolder}/src/"}
        }
    ]
}